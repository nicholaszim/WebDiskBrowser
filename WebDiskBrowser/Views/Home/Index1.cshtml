<div class="w3-center">
	<h4>SIMPLE AS DOOR</h4>
	<h1 class="w3-xxxlarge w3-animate-bottom">WEB FILE BROWSER</h1>
	<h4>BROUGHT TO YOU USING WEBAPI2 AND ANGULARJS</h4>
	<br />
	<div class="w3-container" id="dataContainer">
		<table class="w3-table w3-border">
			<tr class="w3-black">
				<th class="w3-center">Less 10Mb</th>
				<th class="w3-center">10mb-50Mb</th>
				<th class="w3-center">More 100Mb</th>
			</tr>
			<tr class="w3-white">
				<td class="w3-center">{{less10}}</td>
				<td class="w3-center">{{less50}}</td>
				<td class="w3-center">{{more100}}</td>
			</tr>
		</table>
		<form class="w3-container" id="searchContainer" ng-submit="getContent()">
			<p>
				<input class="w3-input w3-border" type="text" ng-model="searchPath">
				<pre>{{slashPath}}</pre>
			</p>
		</form>
		<div class="w3-row">
			<div class="w3-container w3-third" id="diskContainer">
				<ul class="w3-ul w3-card-4 w3-white w3-tiny">
					<li class="w3-black"><i class="fa fa-hdd-o"></i>&nbsp;Disks</li>
				</ul>
				<ul class="w3-ul w3-card-4 w3-white w3-tiny" style="height:150px; overflow: auto">
					<li class="w3-left-align" ng-repeat="disk in disks">
						<a href="#" ng-click="getDisk(disk)"><i class="fa fa-hdd-o"></i>&nbsp;{{disk}}</a>
					</li>
				</ul>
			</div>
			<div class="w3-container w3-twothird" id="entriesContainer">
				<ul class="w3-ul w3-card-4 w3-white w3-tiny">
					<li class="w3-black"><i class="fa fa-file-o"></i>&nbsp;Files and directories</li>
				</ul>
				<ul class="w3-ul w3-card-4 w3-white w3-tiny" style="height:300px; overflow: auto">
					<li class="w3-left-align"><a ng-model="pathList" href="#" ng-click="moveUp()"><i class="fa fa-ellipsis-h"></i></a></li>
					@*<li class="w3-left-align" ng-repeat="file in files" ng-bind-html="file | tagFilter">
					</li>*@
					<li class="w3-left-align" ng-repeat="file in files">
						<a href="#" ng-click="DirStuffNow(file)">{{file}}</a>
					</li>
				</ul>
			</div>
		</div>
	</div>
	<br />
	<footer class="w3-container w3-padding-32 33-red w3-center" id="footerContainer">
		<h4>Follow Us</h4>
		<a class="w3-btn-floating w3-teal" href="javascript:void(0)" title="Rss"><i class="fa fa-rss"></i></a>
		<a class="w3-btn-floating w3-teal" href="javascript:void(0)" title="Facebook"><i class="fa fa-facebook"></i></a>
		<a class="w3-btn-floating w3-teal" href="javascript:void(0)" title="Twitter"><i class="fa fa-twitter"></i></a>
		<a class="w3-btn-floating w3-teal" href="javascript:void(0)" title="Google +"><i class="fa fa-google-plus"></i></a>
		<a class="w3-btn-floating w3-teal" href="javascript:void(0)" title="Linkedin"><i class="fa fa-linkedin"></i></a>
		<p>&copy; Copyright whatever</p>
	</footer>
</div>